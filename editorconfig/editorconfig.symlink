# http://editorconfig.org

# Root-Datei
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.{py,md,rst,sh,c,h}]
indent_size = 4
indent_style = space

[Makefile]
indent_style = tab
