#!/bin/sh

rsync \
  -X \
  --archive \
  --recursive \
  --ignore-existing \
  --numeric-ids \
  --progress \
  --delete \
  --compress \
  --exclude '.DS_Store' \
  --exclude '@*' \
  --exclude '.Spotlight-V100' \
  --exclude '.DocumentRevision-V100' \
  --exclude '.TemporaryItems' \
  --exclude '.Trashes' \
  --exclude '.fseventsd' \
  --verbose \
  /Volumes/MediaHD/ \
  /Volumes/media/
